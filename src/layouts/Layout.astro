---
interface Props {
  title: string;
  cssFile?: string; // Optional CSS file path
}

const { title, cssFile } = Astro.props;
const stylesheetPath = cssFile ? new URL(cssFile, import.meta.url).href : null;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    {stylesheetPath && <link rel="stylesheet" href={stylesheetPath} />}
</head>
<body>
    <slot />
</body>
</html>