---
import Layout from './Layout.astro'; // Use the main layout
import '../styles/blog-style-brutal.css'; // Import blog styles

interface Props {
  title: string;
  pubDate?: string;
  postStyle?: string;
  image?: { url: string; alt: string; };
}

const { title, pubDate, postStyle, image } = Astro.props;
---

<Layout title={title} cssFile="../styles/blog-style-brutal.css">
    <article class:list={["blog-post", postStyle]}>
        <h2>{title}</h2>
        {pubDate && <span class="post-meta">Posted: {pubDate}</span>}
        {image && <img src={image.url} class="post-image" alt={image.alt} />}
        <slot /> {/* Content from Markdown files will go here */}
        <a href="#" class="read-more">Keep Reading... &gt;&gt;</a> {/* You might adjust this link later */}
    </article>
</Layout>